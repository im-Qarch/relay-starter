{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "yarn@4.0.0-rc.39",
  "workspaces": [
    "api",
    "app",
    "db",
    "edge",
    "img",
    "scripts"
  ],
  "scripts": {
    "postinstall": "zx ./scripts/postinstall.js",
    "start": "yarn workspaces foreach -ip -j unlimited run start",
    "build": "yarn workspaces foreach -p -j unlimited run build",
    "setup": "node ./setup",
    "lint": "eslint --cache --report-unused-disable-directives .",
    "test": "jest",
    "tf": "node --no-warnings ./scripts/tf.js",
    "g:lint": "yarn lint \"$INIT_CWD\"",
    "g:test": "yarn test \"$INIT_CWD\"",
    "psql": "yarn db:psql",
    "repl": "yarn db:repl"
  },
  "dependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/node": "^7.20.7",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@emotion/babel-plugin": "^11.10.5",
    "@emotion/eslint-plugin": "^11.10.0",
    "@emotion/react": "^11.10.5",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "babel-jest": "^29.4.2",
    "babel-plugin-import": "^1.13.6",
    "babel-plugin-relay": "^14.1.0",
    "babel-plugin-replace-import-extension": "^1.1.3",
    "chalk": "^5.2.0",
    "cross-spawn": "^7.0.3",
    "dotenv": "^16.0.3",
    "envars": "^0.4.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "graphql-config": "^4.4.1",
    "husky": "^8.0.3",
    "inquirer": "^9.1.4",
    "jest": "^29.4.2",
    "minimist": "^1.2.8",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "relay-config": "^12.0.1",
    "typescript": "^4.9.5",
    "wrangler": "^2.9.1",
    "zx": "^7.1.1"
  },
  "devDependencies": {
    "@jest/types": "^29.4.2",
    "@types/babel__core": "^7.20.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.4.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.13.0"
  },
  "resolutions": {
    "@rollup/plugin-commonjs@npm:^22.0.0": "^21.1.0",
    "chalk@npm:^5.2.0": "^4.1.2",
    "ora@npm:^6.1.0": "^5.4.1"
  },
  "envars": {
    "cwd": "./env"
  },
  "graphql": {
    "projects": {
      "api": {
        "schema": "api/schema.graphql",
        "documents": "api/**/*.ts",
        "extensions": {
          "endpoints": {
            "default": "http://localhost:8080/api"
          }
        }
      },
      "web": {
        "schema": [
          "api/schema.graphql",
          "api/schema.relay.graphql",
          "web/schema.graphql"
        ],
        "documents": "web/**/*.{ts,tsx}",
        "extensions": {
          "endpoints": {
            "default": "http://localhost:5173/api"
          }
        }
      }
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
